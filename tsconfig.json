{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "commonjs",
    "rootDir": "./src",                                  /* Specify the root folder within your source files. */
    "outDir": "./dist",
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "typeRoots": [
      "types",
      "node_modules/@types"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  }
}
